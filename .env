SOMNIA_TESTNET_ARENA_ENGINE_ADDRESS=0x0000000000000000000000000000000000000000
SOMNIA_TESTNET_REPUTATION_CORE_ADDRESS=0x0000000000000000000000000000000000000000

# Somnia Mainnet Deployments (for future use)
SOMNIA_MAINNET_PASSPORT_ADDRESS=0x0000000000000000000000000000000000000000
SOMNIA_MAINNET_ARENA_ENGINE_ADDRESS=0x0000000000000000000000000000000000000000
SOMNIA_MAINNET_REPUTATION_CORE_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================
# OPTIONAL: FRONTEND CONFIGURATION
# ============================================
VITE_SOMNIA_TESTNET_RPC_URL=https://rpc.testnet.somnia.network
VITE_SOMNIA_MAINNET_RPC_URL=https://rpc.somnia.network
